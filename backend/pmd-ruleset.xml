<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="ProManage PMD Rules"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>ProManage项目PMD规则集</description>

    <!-- 导入内置规则集 -->
    <rule ref="category/java/bestpractices.xml">
        <exclude name="JUnitTestContainsTooManyAsserts"/>
        <exclude name="UseVarargs"/>
        <!-- 禁用final类检测（工具类不一定要final） -->
        <exclude name="ClassWithOnlyPrivateConstructorsShouldBeFinal"/>
        <!-- 允许未使用的赋值（某些构建模式需要） -->
        <exclude name="UnusedAssignment"/>
        <!-- 放宽日志语句保护要求 -->
        <exclude name="GuardLogStatement"/>
    </rule>

    <rule ref="category/java/codestyle.xml">
        <exclude name="AtLeastOneConstructor"/>
        <exclude name="CommentDefaultAccessModifier"/>
        <exclude name="ConfusingTernary"/>
        <exclude name="FieldNamingConventions"/>
        <exclude name="LongVariable"/>
        <exclude name="OnlyOneReturn"/>
        <exclude name="ShortClassName"/>
        <exclude name="ShortMethodName"/>
        <exclude name="ShortVariable"/>
        <exclude name="TooManyStaticImports"/>
        <!-- 禁用低价值final修饰符规则 -->
        <exclude name="MethodArgumentCouldBeFinal"/>
        <exclude name="LocalVariableCouldBeFinal"/>
        <exclude name="FieldDeclarationsShouldBeAtStartOfClass"/>
        <!-- 允许不必要的完全限定名（提高可读性） -->
        <exclude name="UnnecessaryFullyQualifiedName"/>
        <!-- 允许空构造函数不加注释 -->
        <exclude name="UncommentedEmptyConstructor"/>
        <!-- 允许不必要的注解值元素 -->
        <exclude name="UnnecessaryAnnotationValueElement"/>
    </rule>

    <rule ref="category/java/design.xml">
        <exclude name="LawOfDemeter"/>
        <exclude name="LoosePackageCoupling"/>
        <!-- 禁用数据类检测（DTO/Entity是合理的数据类） -->
        <exclude name="DataClass"/>
        <exclude name="NPathComplexity"/>
        <!-- 允许过多公共方法（某些服务类需要） -->
        <exclude name="ExcessivePublicCount"/>
    </rule>

    <!-- 启用方法过多和字段过多检测，设置合理阈值 -->
    <rule ref="category/java/design.xml/TooManyMethods">
        <properties>
            <property name="maxmethods" value="20"/>
        </properties>
    </rule>

    <rule ref="category/java/design.xml/TooManyFields">
        <properties>
            <property name="maxfields" value="15"/>
        </properties>
    </rule>

    <!-- 恢复关键规则，但设置合理的阈值 -->
    <rule ref="category/java/design.xml/CyclomaticComplexity">
        <properties>
            <property name="classReportLevel" value="80"/>
            <property name="methodReportLevel" value="15"/>
        </properties>
    </rule>

    <rule ref="category/java/documentation.xml">
        <exclude name="CommentRequired"/>
        <exclude name="CommentSize"/>
    </rule>

    <rule ref="category/java/errorprone.xml">
        <!-- 禁用序列化版本UID检查（非必需场景） -->
        <exclude name="MissingSerialVersionUID"/>
        <!-- 允许null赋值（有合理使用场景） -->
        <exclude name="NullAssignment"/>
        <!-- 允许硬编码IP（配置示例中使用） -->
        <exclude name="AvoidUsingHardCodedIP"/>
        <!-- 允许if条件中的字面量（提高可读性） -->
        <exclude name="AvoidLiteralsInIfCondition"/>
        <!-- 允许不必要的类型转换（某些泛型场景需要） -->
        <exclude name="UnnecessaryCast"/>
        <!-- 允许不可变字段（builder模式需要） -->
        <exclude name="ImmutableField"/>
        <!-- 允许字段名与方法名匹配（builder模式、getter/setter） -->
        <exclude name="AvoidFieldNameMatchingMethodName"/>
        <!-- 禁用测试类检测（误报太多） -->
        <exclude name="TestClassWithoutTestCases"/>
    </rule>

    <rule ref="category/java/multithreading.xml"/>

    <rule ref="category/java/performance.xml"/>

    <rule ref="category/java/security.xml"/>

    <!-- 恢复重复字面量检测 -->
    <rule ref="category/java/errorprone.xml/AvoidDuplicateLiterals"/>

    <!-- 禁用测试类检测 - 误报太多 -->
    <!-- <rule ref="category/java/errorprone.xml/TestClassWithoutTestCases"/> -->

    <!-- 自定义规则 -->
    <rule ref="category/java/codestyle.xml/ClassNamingConventions">
        <properties>
            <property name="violationSuppressRegex" value=".*Test"/>
        </properties>
    </rule>

    <rule ref="category/java/bestpractices.xml/JUnitTestContainsTooManyAsserts">
        <properties>
            <property name="maximumAsserts" value="10"/>
        </properties>
    </rule>

</ruleset>