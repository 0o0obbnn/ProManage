# ProManage Backend Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/promanage
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT Configuration
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=your_generated_secret_here
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Druid Monitoring (Optional)
DRUID_USERNAME=admin
DRUID_PASSWORD=your_druid_password_here

# Elasticsearch (Optional - uncomment when needed)
# ES_HOST=localhost
# ES_PORT=9200
# ES_USERNAME=elastic
# ES_PASSWORD=your_es_password_here

# MinIO (Optional - uncomment when needed)
# MINIO_ENDPOINT=http://localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=your_minio_secret_here

# Mail Configuration
# For Gmail: use smtp.gmail.com:587
# For Outlook: use smtp-mail.outlook.com:587
# For custom SMTP: set your own host and port
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here

# RabbitMQ (Optional - uncomment when needed)
# RABBITMQ_HOST=localhost
# RABBITMQ_PORT=5672
# RABBITMQ_USERNAME=guest
# RABBITMQ_PASSWORD=your_rabbitmq_password_here
