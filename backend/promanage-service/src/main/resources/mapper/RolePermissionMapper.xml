<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.promanage.service.mapper.RolePermissionMapper">

    <!-- 根据角色ID删除所有权限关联 -->
    <delete id="deleteByRoleId">
        DELETE FROM tb_role_permission
        WHERE role_id = #{roleId}
    </delete>

    <!-- 根据权限ID删除所有角色关联 -->
    <delete id="deleteByPermissionId">
        DELETE FROM tb_role_permission
        WHERE permission_id = #{permissionId}
    </delete>

    <!-- 批量插入角色权限关联 -->
    <insert id="batchInsert">
        INSERT INTO tb_role_permission (role_id, permission_id, create_time)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId}, #{item.permissionId}, #{item.createTime})
        </foreach>
    </insert>

    <!-- 检查角色是否拥有指定权限 -->
    <select id="existsByRoleIdAndPermissionId" resultType="boolean">
        SELECT COUNT(*) > 0 FROM tb_role_permission
        WHERE role_id = #{roleId}
        AND permission_id = #{permissionId}
    </select>

</mapper>